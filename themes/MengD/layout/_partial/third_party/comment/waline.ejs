<div id="wcomments"></div>
<script>
function LoadWaline() {
    mengd.getScript("<%-theme.waline.source%>",function(){
        const link = document.createElement('link')
        link.type='text/css'
        link.rel='stylesheet'
        link.href = '<%-theme.waline.source_css%>'
        document.head.appendChild(link)
        Waline.init(Object.assign({
            el: '#wcomments',
            path: location.pathname,
            serverURL: '<%- theme.waline.serverURL %>',
            visitor: true
        }, <%-JSON.stringify(theme.waline)%>))
    })
}
LoadWaline()
</script>

<%# 判断主题内置页面 %> 
<% var type=page.type; var title=page.title%>
<% if (type=="tags" ) { %>
        <div class="page-title">
            <%= title %> - <%= site.tags.length %>
        </div>
<%- partial('tags') %> 
<% }else if(type=="categories" ){ %>
    <div class="page-title">
        <%= title %> - <%= site.categories.length %>
    </div>
<%- partial('categories') %> 
<% }else if(type=="link" ){ %>
    <div class="page-title">
        <%= title %>
    </div>
<%- partial('link') %>
<div class="content"><%- page.content %></div>
<% }else { %>
    <%# 如果全部不符合主题内置页面，则是用户执行：hexo new page xxx 的自定义页面 %> 
    <div class="page-title">
        <%= title %>
    </div>
    <div class="content"><%- page.content %></div>
<% } %>

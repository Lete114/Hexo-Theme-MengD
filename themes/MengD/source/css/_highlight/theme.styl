$highlightTheme = hexo-config('highlightTheme')

if ($highlightTheme == 'default')
  $codeBlock = #222d32
  $highlight-background = #263238
  $highlight-current-line = #efefef
  $highlight-selection = #80CBC420
  $highlight-foreground = #EEFFFF

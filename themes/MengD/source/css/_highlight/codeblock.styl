.show-btn
    position: absolute;
    cursor: pointer;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 2.875rem;
    text-align: center;
    color: #fff;
    background-image: linear-gradient(transparent 0,$highlight-background 80%);
    z-index: 1;
    i
        margin-top: 1rem
        animation: UpDown .8s infinite alternate;

@keyframes UpDown{
    from{transform:translate(0,0)}
    to{transform:translate(0,6px)}
}   
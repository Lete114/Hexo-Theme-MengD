// Home 首页
#post-list
    margin-bottom 40px

.post-item
    display flex
    margin 20px 0
    padding-bottom 10px
    border-bottom 1px solid var(--adorn)

    .post-item-info
        width 100%
        padding-right 10px

    .post-item-cover
        order 1
        width 100%
        max-width 40%
        height 140px
        position relative
        overflow hidden
        border-radius 10px

        img
            display block
            transition opacity 0.4s ease-out
            position absolute
            left 0
            top 0
            object-fit cover
            width 100%
            height 100%

    .post-title
        color var(--title-color)
        font-size 1.1rem
        margin-bottom 4px
        font-weight 700
        line-height 1.5
        display inline-block
        text-decoration none

    .post-description
        display -webkit-box
        -webkit-box-orient vertical
        -webkit-line-clamp $line
        font-size 0.82rem
        line-height 24px
        word-wrap break-word
        word-break break-all
        overflow hidden

    .post-meta-wrap
        color #999
        font-size 0.6rem
        margin 10px 0 0

        a
            text-decoration none
            color #999

    .post-item-cover + .post-item-info
        position relative

        .post-meta-wrap
            position absolute
            bottom 0px

@media (max-width 768px)
    #post-list .post-item
        flex-direction column-reverse

        .post-meta-wrap
            margin-top 10px
            position unset

        .post-item-cover
            height 230px
            max-width 100%
            margin-bottom 10px

@import '_partial/header'

// Home 首页
#post-list
    margin-bottom 40px

    .post-item
        margin 10px 0
        border-bottom 1px solid #f0f0f0

        .post-title
            color var(--title-color)
            font-size 1.1rem
            margin-bottom 4px
            font-weight 700
            line-height 1.5
            display inline-block
            text-decoration none

        .post-description
            display -webkit-box
            -webkit-box-orient vertical
            -webkit-line-clamp $line
            font-size 0.82rem
            line-height 24px
            word-wrap break-word
            word-break break-all
            overflow hidden

        .post-meta-wrap
            margin 10px 0
            color #999
            font-size 0.6rem

            a
                text-decoration none
                color #999

@import '_partial/header'

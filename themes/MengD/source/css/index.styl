// Home 首页
#post_list
    .post_item
        margin 10px 0
        border-bottom 1px solid #f0f0f0

        .post_title
            color var(--title_color)
            font-size 1.1rem
            margin-bottom 4px
            font-weight 700
            line-height 1.5
            display inline-block
            text-decoration none

        .post_description
            display -webkit-box
            -webkit-box-orient vertical
            -webkit-line-clamp $line
            font-size 0.82rem
            line-height 24px
            word-wrap break-word
            word-break break-all
            overflow hidden

        .post_meta_wrap
            margin 10px 0
            color #999
            font-size 0.6rem

            a
                text-decoration none
                color #999

    .cover_wrap
        margin 0.8rem auto
        width 100%
        padding-bottom 50%
        position relative
        overflow hidden
        border-radius 10px

        .cover
            display block
            transition opacity 400ms ease-out
            position absolute
            left 0
            top 0
            object-fit cover
            width 100%
            height 100%

@import '_partial/header'

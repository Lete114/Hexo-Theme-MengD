.pagination {
    padding-top: 30px;
    text-align: center;
    color: #666;
    font-size: 14px;
    width: 100%;
    display: inline-block;
}
.pagination .page-number.current {
    background: #00c4b6;
    color: #fff;
}
.pagination .page-number {
    display: inline-block;
    margin: 0 .2rem;
    min-width: 1.2rem;
    height: 1.2rem;
    color: #00c4b6;
    text-align: center;
    line-height: 1.2rem;
}
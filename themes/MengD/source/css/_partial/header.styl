/* 头信息 */
header
    padding-bottom 20px
    background-size cover
    display: flex;
    justify-content: space-between;

.avatar:hover 
    -webkit-transform rotate(360deg)
    -moz-transform rotate(360deg)
    -o-transform rotate(360deg)
    -ms-transform rotate(360deg)
    transform rotate(360deg)
    -webkit-transition all .5s
    -moz-transition all .5s
    -o-transition all .5s
    -ms-transition all .5s
    transition all .5s

.header_author
    .author_avatar
        width 100px
        height 100px
        border-radius 50%
    
    .author_name
        float none
        font-weight 700
        font-size 1.3rem
        color $title
        padding-top 10px


.header_description 
    margin 5% 0
    font-size .9rem
    color var(--text_color)
    text-align: right;
    .header_icon 
        float right
        a 
            i
                color var(--text_color)
                font-size 16px
                margin-right 10px
                margin-top 10px
            :hover
                -webkit-transform rotate(360deg)
                -moz-transform rotate(360deg)
                -o-transform rotate(360deg)
                -ms-transform rotate(360deg)
                transform rotate(360deg)
                -webkit-transition all .5s
                -moz-transition all .5s
                -o-transition all .5s
                -ms-transition all .5s
                transition all .5s

@media screen and (max-width 800px)
    header
        display: inline;
        .author
            display: block;
            text-align: center;
        .header_description
            text-align: center;
        .header_description>.header_icon
            text-align: center;
            float: none

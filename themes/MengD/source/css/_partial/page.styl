#page
    border-radius 10px

.content
    padding-bottom 20px
    word-break break-all

.page-title, .article-count
    font-size 1.3rem
    text-align center
    padding-bottom 30px

.tag-content
    display flex
    flex-wrap wrap
    justify-content center

.category-list
    padding 0
    text-align center

    .category-list-item
        padding 10px
        list-style none
        display inline-block

        .category-list-count
            position relative
            top -8px
            right -2px
            color #858585
            font-size 0.8rem

            &:before
                content '('

            &:after
                content ')'

.archive-article-info
    .article-item
        padding-left 1rem
        line-height 20px

        .article-title-item
            width 70%
            display inline-block
            overflow hidden
            white-space nowrap
            text-overflow ellipsis

        .post-created-date
            float right

.tag-content a
    padding 4px

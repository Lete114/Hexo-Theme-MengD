// 文章

// 文章头信息
.post_info
    text-align: center
    padding-bottom: 30px
    .post_title
        padding-bottom: 4px
    .post_meta>div
        padding: 2px 0

// 文章信息
.post_content
    line-height: 1.8;
    padding-bottom: 50px;
    img 
        margin: 0 auto .8rem;
        display: block;
        max-width: 100%;
    ul,ol
        padding-inline-start: 30px;
    
    
// 目录
#toc
    background: var(--main_bg)
    position: fixed;
    left: -250px;
    top: 0;
    z-index: 103;
    width: 250px;
    height: 100%;
    -webkit-transition: all .5s;
    -moz-transition: all .5s;
    -o-transition: all .5s;
    -ms-transition: all .5s;
    transition: all .5s;
    .toc_title
        text-align: center;
        padding: 30px;
        div
            font-size: 14px
            font-weight: bold;
    .progress
        width: 100%;
        height: 10px;
        background: #ededed;
        border-radius: 10px;
    .toc_list
        overflow: hidden auto;
        height: 100%;
        li
            list-style: none;
            line-height: 30px;
            .toc-child
                padding-left: 1rem;
    .toc,.toc_list>li
        padding: 0;
        margin-left: 20px;

// 打开目录
.open_toc
    -webkit-transform: translate3d(100%, 0, 0);
    -moz-transform: translate3d(100%, 0, 0);
    -o-transform: translate3d(100%, 0, 0);
    -ms-transform: translate3d(100%, 0, 0);
    transform: translate3d(100%, 0, 0);

// 目录滚动条
#progress 
    width 60% 
    height 10px 
    background #ededed 
    border-radius 10px 

progress::-webkit-progress-bar 
    background #ededed 
    border-radius 8px 

progress::-webkit-progress-value 
    background var(--main)
    border-radius 8px 

/*版权框*/
if hexo-config('copyright.enable')
    .post_copyright  
        margin: 20px 0;
        position relative
        padding .5rem .8rem
        -webkit-transition box-shadow .3s ease-in-out
        -moz-transition box-shadow .3s ease-in-out
        -o-transition box-shadow .3s ease-in-out
        -ms-transition box-shadow .3s ease-in-out
        transition box-shadow .3s ease-in-out
        box-shadow 0 0px 2px 0px rgba(0, 0, 0, .4)
        border-radius 10px
        border-left 3px solid var(--main)
        border-right 3px solid var(--main)
        div
            line-height 28px
            word-break:break-all
        .post_copyright_icon:before
            position absolute
            top .1rem
            right .6rem
            color var(--main)
            content '\f1f9'
            font-size 1rem
            display inline-block
            font-weight 600
            font-style normal
            font-variant normal
            font-family 'Font Awesome 5 Free'
            text-rendering auto
            -webkit-font-smoothing antialiased
        .post_copyright_meta
            color var(--main)
            font-weight 700

// 文章标签
.post_tag
    text-align: center;
    padding-bottom: 20px;


// 打赏
if hexo-config('reward.enable')
    .post_reward
        position relative
        margin-top 4rem
        width 100%
        text-align center
        margin-top 10px
        .reward_button 
            display inline-block
            cursor pointer
            -webkit-transition all .4s
            -moz-transition all .4s
            -o-transition all .4s
            -ms-transition all .4s
            transition all .4s
            .reward_main 
                position absolute
                bottom 60px
                left 0
                z-index 100
                display none
                padding 0 0 15px
                width 100%
        .reward_button:hover 
            .reward_main 
                display block
                -webkit-animation donate_effcet .3s .1s ease both
                -moz-animation donate_effcet .3s .1s ease both
                -o-animation donate_effcet .3s .1s ease both
                -ms-animation donate_effcet .3s .1s ease both
                animation donate_effcet .3s .1s ease both
                .reward_all .reward_item .post_qr_code_desc 
                    padding-top .4rem
                    width 130px
                    color #858585
    .reward_all:after 
        position absolute
        right 0
        bottom 2px
        left 0
        margin 0 auto
        width 0
        height 0
        border-top 13px solid var(--body_bg)
        border-right 13px solid transparent
        border-left 13px solid transparent
        content ''

    .reward_all:before 
        position absolute
        bottom -10px
        left 0
        width 100%
        height 20px
        content ''


    .post_reward .reward_button .reward_main .reward_all 
        display inline-block
        margin 0
        padding 1rem .5rem
        border-radius 4px
        background var(--body_bg)


    .reward_item 
        display inline-block
        padding 0 8px
        list-style-type none
        vertical-align top
    .reward_item img 
        width 130px
        height 130px

    .reward_button
        display inline-block
        width 56px
        height 56px
        line-height 56px
        font-size 20px
        color #fff
        background var(--main)
        border-radius 50%
        transition .4s ease-in-out
        box-shadow 0 2px 5px 0 rgba(0,0,0,.16), 0 2px 10px 0 rgba(0,0,0,.12)

    .reward_button:hover
        box-shadow 0 6px 12px rgba(0,0,0,.2), 0 4px 15px rgba(0,0,0,.2)

// 上下一篇文章
.pagination
    .page_pre
        float: left;
        line-height: 2em;
        letter-spacing: .2px;
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 1;
        -webkit-box-orient: vertical;
    .page_next
        float: right;
        line-height: 2em;
        letter-spacing: .2px;
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 1;
        -webkit-box-orient: vertical;


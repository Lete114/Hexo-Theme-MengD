// 文章
article
    .post 
    .post-tag
        color #858585
        float left
        font-size 16px
        max-width 300px
        height 25px
        padding-top 5px
        .post-meta
            text-align center
            margin-bottom .5rem
            font-size 90%
    .post-title,.post-meta
            text-align center
        .post-title .title:before
            content none
        .post-title h2:before 
                content none

    .post-content
        padding-top 50px

    .post-content 
        p
            line-height 1.7em
            letter-spacing .2px
            font-weight 530
            margin .8rem 0 
        h1,h2,h3,h4,h5,h6
            margin-block-start .83em
            margin-block-end .83em
        h1:before,
        h2:before,
        h3:before,
        h4:before,
        h5:before,
        h6:before
            color $fan
            margin-right 10px
            display inline-block
            content '\f863'
            -webkit-animation turn 1s linear infinite
            -moz-animation turn 1s linear infinite
            -o-animation turn 1s linear infinite
            -ms-animation turn 1s linear infinite
            animation turn 1s linear infinite
            font-family 'Font Awesome 5 Free'
        h1
            font-size 1.5em
        h2
            font-size 1.3em
        h3
            font-size 1.1em
        h4
            font-size .9em
        h5
            font-size .7em
        h6
            font-size .5em
        figure.highlight
            table 
                display table
                width 0
            td 
                padding 0
                border none
                vertical-align middle
                padding-left .5rem
            .highlight-tools 
                position relative
                overflow hidden
                width 100%
                height 1.5rem
                background #1c1c1c
                color rgba(238,255,255,.8)
                font-size 14px
            .code pre 
                padding-right .5rem
                padding-left .5rem
                width 100%
                margin 0
                padding 8px 0
                border none
        img 
            margin 0 auto .8rem
            display block
            max-width 100%

#toc 
    height 100%
    position sticky
    border-radius 10px
    top 60px
    width 300px
    padding 1rem
    margin 60px 10px
    background #fff
    #toc-list
        overflow-y scroll
        max-height 500px
    ol 
        li 
            list-style none
            line-height 30px
    .toc-child
        padding-left 1rem    
    .toc
        overflow-y scroll
        max-height 500px
        padding 0
        margin-left 20px
    li.toc-item.toc-level-1
        list-style none
        margin-left 20px
   if hexo-config("toc.scrollbar")
    .toc::-webkit-scrollbar
        width 0px
    #toc-list::-webkit-scrollbar
        width 0px


.social-share
    float right
    .social-share-icon
        font-size 16px !important
        width 26px !important
        height 26px !important
        line-height 26px !important


/*版权框两边颜色*/
.post-copyright  
    margin-bottom 10px
    position relative
    padding .5rem .8rem
    -webkit-transition box-shadow .3s ease-in-out
    -moz-transition box-shadow .3s ease-in-out
    -o-transition box-shadow .3s ease-in-out
    -ms-transition box-shadow .3s ease-in-out
    transition box-shadow .3s ease-in-out
    box-shadow 0 0px 2px 0px rgba(0, 0, 0, .4)
    border-radius 10px
    border-left 3px solid $main
    border-right 3px solid $main
    div
        line-height 28px
        word-break:break-all
    .post-copyright-icon:before
        position absolute
        top .1rem
        right .6rem
        color $main
        content '\f1f9'
        font-size 1rem
        display inline-block
        font-weight 600
        font-style normal
        font-variant normal
        font-family 'Font Awesome 5 Free'
        text-rendering auto
        -webkit-font-smoothing antialiased
    .post-copyright-meta
        color $main
        font-weight 700

#progress 
    width 60% 
    height 10px 
    background #ededed 
    border-radius 10px 

progress::-webkit-progress-bar 
    background #ededed 
    border-radius 8px 

progress::-webkit-progress-value 
    background convert(hexo-config('theme_color.progress'))
    border-radius 8px 

#toc-title
    text-align center
    padding-bottom 30px 

@media screen and (max-width 1100px)
    #toc .toc
        margin-left 0
@media screen and (max-width 1000px)
    #toc
        display none
        height 250px 
        position fixed 
        right 35px
        bottom 30px 
        top 48%
        width 280px 
        background rgba(255,255,255,.9) 
        margin 0
    
    #toc-list,.toc
        max-height 180px !important
    .rightside-toc
        display inline-block !important

@media screen and (max-width 800px)
    article.post .post-tag
        margin 10px 0 0 20px
    .social-share
        margin 10px 20px 0 0
    .post-content 
        p,code,li
            font-size .9em

@media screen and (max-width 600px)
    article.post .post-tag
        display none
    .post-reward
        margin-top 60px
    .social-share 
        text-align center
        float none
        margin 10px 0 0 0




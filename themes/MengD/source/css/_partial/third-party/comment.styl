/* twikoo */
#twikoo 
    .tk-submit
        box-shadow 2px 2px 5px #bbb
        border-radius 8px
        padding 10px 10px 0
        margin-bottom 20px
    .tk-comment
        box-shadow 2px 2px 5px #bbb
        background rgba(255,255,255,.3)
        border-radius 8px
        padding 30px
        margin-top 1rem
        .tk-replies
            .tk-comment
                padding 0 0 30px 0
                .tk-avatar
                    height 1.25rem
                    width 1.25rem
                    .tk-avatar-img
                        height 1.25rem
                .tk-nick strong,.tk-content
                    font-size .9em        
    .tk-main .tk-comment
        box-shadow 0 0 black
    .tk-extras .tk-extra
        padding .2em .5em
        border-radius .2em    
        background #ededed

@media screen and (max-width 800px)
    #twikoo 
        .tk-replies
            .tk-comment
                .tk-avatar
                    display none
                .tk-nick strong,.tk-content
                    font-size .9em

/* 评论 valine / waline */   
#Direct-Comments
    text-align center
    padding-top 30px 
    a
        display inline-block 
        width 30px 
        height 30px 
        background-color $main 
        color #fff 
        border-radius 6px 
        i 
            margin-top 7px




.comment-head
    .comment-headline
        margin-bottom 1.6rem 
        display inline-block 
        vertical-align middle 
        font-weight 700 
        font-size 20px 

#vcomments,#wcomments
    .vpanel
        box-shadow 2px 2px 5px #bbb
        border-radius 8px
    .vbtn
        border none 
        background $main 
        color #fff
    code 
        color #c7254e 
        background-color #f2ecee 
    .vcard 
        box-shadow 2px 2px 5px #bbb 
        background rgba(255, 255, 255, 0.3) 
        border-radius 8px 
        padding 30px 
        margin 30px 0px 0px 0px 
    .vquote .vcard 
        box-shadow 2px 2px 5px transparent 
        background rgba(255, 255, 255, 0.0) 
        padding 0px 
    .vcontent p
        color #777
    .vmeta .vat
        padding 0 0.8rem
        border 1px solid $main   
        border-radius 5px
        color $main   
        font-size 0.7125rem                        

@media screen and (max-width 800px)
    .comment-head
        padding 0 20px 0 20px    
    

if hexo-config('search.enable')
    // 关键词
    .search-keyword 
        color #f47466
        font-weight 700
    // 搜索结果列表
    #local-search .search-result-list 
        overflow-y auto
        max-height 10.5rem
        overflow-x:hidden
        padding 0 10px
    #local-search .search-result
        margin .3rem 0 .4rem
        word-break break-all
        line-height 1.7
        font-size 14px
    .search-result-list li
        list-style none
        a
            font-weight 600
            font-size 14px
    // 关闭按钮
    .search-close-button 
        position absolute
        top .8rem
        right 1rem
        color #858585
        font-size 1rem
        line-height 1
        cursor pointer
        -webkit-transition color .2s ease-in-out
        -moz-transition color .2s ease-in-out
        -o-transition color .2s ease-in-out
        -ms-transition color .2s ease-in-out
        transition color .2s ease-in-out
    // 搜索框
    .search-dialog 
        border-radius 10px
        position fixed
        top 5rem
        left 50%
        z-index 1001
        margin-left -15rem
        padding 1rem
        width 30rem
        background #ffffff
        -webkit-box-sizing border-box
        -moz-box-sizing border-box
        box-sizing border-box
        hr 
            margin 1rem auto 
    // 本地搜索
    #local-search-title 
        padding 0 0 .7rem
        color $main
        font-size 1rem
        text-align center
        line-height 1
    // 搜索框
    #local-search input 
        padding .25rem .7rem
        width 100%
        outline 0
        border 2px solid $main
        border-radius 2rem
        background #f6f8fa
        color #4c4849
        font-size 14px
        -webkit-box-sizing border-box
        -moz-box-sizing border-box
        box-sizing border-box
    @media screen and (max-width 800px)
        #local-search .search-result-list
            padding-bottom 2rem
            max-height 75vh!important
        .search-dialog
            border-radius 0
            top 0
            left 0
            margin 0
            width 100%
            height 100%